<addons>
<addon id="plugin.program.aptoide" version="2018.01.08" name="Aptoide for Kodi" provider-name="aenemapy">
	<requires>
		<import addon="xbmc.python" version="2.19.0" />
		<import addon="script.module.requests" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="main.py">
		<provides>video executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
        <description>Install/Download Apk from Aptoide APK Store</description>

		<summary lang="en">Aptoide APK Store</summary>
		<platform>all</platform>
		<forum>-</forum>
		<website>-</website>
		<source>-</source>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
		</assets>
		<news>-</news>
	</extension>
</addon>

